<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginDemoApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Login!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry Placeholder="Email"  x:Name="txtMail"></Entry>
        <Entry Placeholder="Pin" x:Name="txtPin"></Entry>
        <Button Text="Ingresar" x:Name="btn_Login" Clicked="Button_Clicked"></Button>
    </StackLayout>

</ContentPage>
